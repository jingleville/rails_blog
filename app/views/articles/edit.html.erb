<h1> Edit article </h1>

<%= form_for :article, url: article_path,method: :put, data: {turbo:false} do |f| %>
	<% if @article.errors.any? %>
		<div class="errors_message">
			<ul>
				<% @article.errors.full_messages.each do |message| %>
					<li>
						<%= message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title%>
		<%= f.text_field :title%>
	</p>

	<p>
		<%= f.label :text%>
		<%= f.text_area :text%>
	</p>

	<p>
		<%= f.submit :Submit%>
	</p>
<% end %>