<h1> New article </h1>

<%= form_for :article, url: articles_path, data: {turbo:false} do |f| %>
	<% if @article %>
		<div class="errors_message">
			<ul>
				<% @article.errors.full_messages.each do |message| %>
					<li>
						<%= message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<p>
		<%= f.label :title%>
		<%= f.text_field :title%>
	</p>

	<p>
		<%= f.label :text%>
		<%= f.text_area :text%>
	</p>

	<p>
		<%= f.submit :Submit%>
	</p>
<% end %>